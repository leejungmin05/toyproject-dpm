<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >
    <data>
        <variable
            name="userModel"
            type="com.example.toyproject_dpm.model.UserModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:imageDrawable="@{userModel.image}"

           />


        <TextView
            android:id="@+id/userName"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@{userModel.name}"/>

        <TextView
            android:id="@+id/userAge"
            android:layout_width="41dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@{userModel.age}" />

        <TextView
            android:id="@+id/userPhoneNum"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@{userModel.phoneNum}" />

        <TextView
            android:id="@+id/userCountry"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="@{userModel.country}" />

    </LinearLayout>
</LinearLayout>
</layout>